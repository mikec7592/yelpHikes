<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= hike.image %>" class="card-img-top" alt="Random forest image">
            <div class="card-body">
              <h5 class="card-title"><%= hike.title %></h5>
              <p class="card-text"><%= hike.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= hike.location %></li>
              <li class="list-group-item">$<%= hike.price %>/night</li>
              <!-- <li class="list-group-item"><%= hike.rating %></li> -->
            </ul>
            <div class="card-body">
              <a class="card-link btn btn-info" href="/hikes/<%= hike._id%>/edit">Edit</a>
              <form class="d-inline" action="/hikes/<%=hike._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
          </div>
    </div>
</div>
