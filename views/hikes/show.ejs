<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= hike.image %>" class="card-img-top" alt="Random forest image">
            <div class="card-body">
              <h5 class="card-title"><%= hike.title %></h5>
              <p class="card-text"><%= hike.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= hike.location %></li>
              <li class="list-group-item text-muted">Submitted by: <%= hike.author.username %></li>
              <li class="list-group-item">$<%= hike.price %>/night</li>
              <!-- <li class="list-group-item"><%= hike.rating %></li> -->
            </ul>
            <% if (currentUser && hike.author.equals(currentUser._id)) { %>
            <div class="card-body">
              <a class="card-link btn btn-info" href="/hikes/<%= hike._id%>/edit">Edit</a>
              <form class="d-inline" action="/hikes/<%=hike._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
          </div>
    </div>
    <div class="col-6">
      <h2>Leave a Review</h2>
      <form class="mb-3 validated-form" novalidate action="/hikes/<%=hike._id%>/reviews" method="POST"> 
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"> 
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" required></textarea>
        <div class="valid-feedback">
          Looking good!
        </div>
        </div>
        <button class="btn btn-success">Submit Review</button>
      </form>
      <% for (let review of hike.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Rating: <%= review.rating %></h5>
          <p class="card-text">Review: <%= review.body %></p>
          <form action="/hikes/<%= hike._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
</div>
