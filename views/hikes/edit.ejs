<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Hike</h1>
    <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
        <form action="/hikes/<%=hike._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control " type="text" id="title" name="hike[title]"
                value="<%=hike.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Location</label>
                <input class="form-control" type="text" id="location" name="hike[location]"
                value="<%=hike.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="hike[price]" value="<%=hike.price %>" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="'text" id="description" name="hike[description]" required>
                    <%= hike.description%>
                </textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
               <% hike.images.forEach(function(img, i){ %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="blank">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>">Delete?</label>
                <% }) %>
            </div>
            <button class="btn btn-success"> Update</button>
        </form>
        <a href="/hikes/<%= hike._id%>">Back to Hike Details</a>
    </div>
</div>