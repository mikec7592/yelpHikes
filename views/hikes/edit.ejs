<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Hike</h1>
    <div class="col-6 offset-3">
        <form action="/hikes/<%=hike._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control " type="text" id="title" name="hike[title]"
                value="<%=hike.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Location</label>
                <input class="form-control" type="text" id="location" name="hike[location]"
                value="<%=hike.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hike[image]"
                value="<%=hike.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="hike[price]" value="<%=hike.price %>" placeholder="0.00" aria-label="price" aria-describedby="price-label">
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="'text" id="description" name="hike[description]"><%= hike.description%></textarea>
            </div>
            <button class="btn btn-success"> Update</button>
        </form>
        <a href="/hikes/<%= hike._id%>">Back to Hike Details</a>
    </div>
</div>